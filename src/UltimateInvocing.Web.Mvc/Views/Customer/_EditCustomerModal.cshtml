@using UltimateInvocing.Web.Models.Common.Modals
@model UltimateInvocing.Web.Models.Customer.EditCustomerViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCustomer")))

<div class="modal-body">
    <form name="CustomerEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="bedrijfsNaam" type="text" name="CompanyName" value="@Model.CompanyName" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="bedrijfsNaam" class="form-label">@L("Customer.CompanyName")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="email" name="CompanyEmail" class="validate form-control" value="@Model.CompanyEmail" />
                        <label for="email" class="form-label">@L("Customer.CompanyEmail")</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="phoneNumber" name="CompanyPhonenumber" class="validate form-control" value="@Model.CompanyPhonenumber" />
                        <label for="phoneNumber" class="form-label">@L("Customer.CompanyPhonenumber")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Customers/_EditCustomerModal.js" asp-append-version="true"></script>
