@using UltimateInvocing.Web.Models.Common.Modals
@model UltimateInvocing.Web.Models.Customer.EditCustomerViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCustomer")))

<div class="modal-body">
    <form name="CustomerEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Number" type="number" name="Number" value="@Model.Number" required min="0" class="validate form-control">
                        <label for="Number" class="form-label">@L("Customer.Number")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="CompanyName" type="text" name="CompanyName" value="@Model.CompanyName" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="CompanyName" class="form-label">@L("Customer.CompanyName")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="CompanyEmail" name="CompanyEmail" class="validate form-control" value="@Model.CompanyEmail" />
                        <label for="CompanyEmail" class="form-label">@L("Customer.CompanyEmail")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="CompanyPhonenumber" name="CompanyPhonenumber" class="validate form-control" value="@Model.CompanyPhonenumber" />
                        <label for="CompanyPhonenumber" class="form-label">@L("Customer.CompanyPhonenumber")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Customers/_EditCustomerModal.js" asp-append-version="true"></script>
