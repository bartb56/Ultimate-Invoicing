@using UltimateInvocing.Web.Startup
@model UltimateInvocing.Factories.EmailTemplates.EmailTemplateListModel
@{
    ViewBag.CurrentPageName = PageNames.EmailTemplates; // The menu item will be active for this page.
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/EmailTemplates/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/EmailTemplates/Index.min.js" asp-append-version="true"></script>
    </environment>

}



<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("EmailTemplates")
                    <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float" data-toggle="modal" data-target="#EmailTemplateCreateModal">
                        <i class="material-icons">add</i>
                    </button>
                    <button id="OpenSettings" type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float" hint="Email settings" data-toggle="modal" data-target="#EmailSettingsEditModal">
                        <i class="material-icons">settings</i>
                    </button>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" emailTemplate="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@L("EmailTemplate.TemplateType")</th>
                            <th>@L("EmailTemplate.Company")</th>
                            <th>@L("EmailTemplate.Name")</th>
                            <th>@L("EmailTemplate.Content")</th>
                            <th>@L("EmailTemplate.IsActive")</th>
                            <th>@L("DisplayOrder")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emailTemplate in Model.EmailTemplateDtos)
                        {
                            <tr>
                                <td>@emailTemplate.TemplateType</td>
                                <td>@emailTemplate.Company.Name</td>
                                <td>@emailTemplate.Name</td>
                                <td>@Html.Raw(emailTemplate.HtmlContent)</td>
                                <td>
                                    @if (emailTemplate.IsActive)
                                    {
                                        <i class="material-icons">check</i>}
                                    else
                                    {
                                        <i class="material-icons">cancel</i>}
                                </td>
                                <td>@emailTemplate.DisplayOrder</td>

                                <td class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" emailTemplate="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">menu</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="#" class="waves-effect waves-block edit-emailTemplate" data-emailTemplate-id="@emailTemplate.Id" data-toggle="modal" data-target="#EmailTemplateEditModal"><i class="material-icons">edit</i>@L("Edit")</a></li>
                                        <li><a href="#" class="waves-effect waves-block delete-emailTemplate" data-emailTemplate-id="@emailTemplate.Id" data-emailTemplate-name="@emailTemplate.Id"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="EmailTemplateCreateModal" tabindex="-1" emailTemplate="dialog" aria-labelledby="EmailTemplateCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" emailTemplate="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>@L("CreateNewEmailTemplate")</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="emailTemplateCreateForm" emailTemplate="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <select id="CompanyId" name="CompanyId" required asp-items="Model.Companies" class="validate form-control"></select>
                                        <label for="CompanyId" class="form-label">@L("EmailTemplate.Company")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select id="TemplateType" name="TemplateType" required asp-items="Model.EmailTemplateTypes" class="validate form-control"></select>
                                    <label for="TemplateType" class="form-label">@L("EmailTemplate.TemplateType")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="Name" type="text" name="Name" required maxlength="128" minlength="0" class="validate form-control">
                                    <label for="Name" class="form-label">@L("EmailType.Name")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="DisplayOrder" name="DisplayOrder" required value="0" class="validate form-control" type="number" min="0">
                                    <label for="DisplayOrder" class="form-label">@L("DisplayOrder")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <input class="filled-in" value="True" type="checkbox" name="IsActive" id="IsActive" checked="checked" />
                                <label for="IsActive" class="form-label">@L("EmailTemplate.IsActive")</label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div id="editor-container">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <input type="hidden" name="HtmlContent" id="HtmlContent"/>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="EmailSettingsEditModal" tabindex="-1" emailTemplate="dialog" aria-labelledby="EmailSettingsEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" emailTemplate="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>@L("EmailSettings")</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="emailSettingsForm" emailTemplate="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="DefaultFromAddress" name="DefaultFromAddress" required class="validate form-control" />
                                        <label for="DefaultFromAddress" class="form-label">@L("EmailSettings.DefaultFromAddress")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="SmtpHost" name="Smtp.Host" required class="validate form-control" />
                                        <label for="Smtp.Host" class="form-label">@L("EmailSettings.Smtp.Host")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="SmtpPort" name="Smtp.Port" required class="validate form-control" />
                                        <label for="Smtp.Port" class="form-label">@L("EmailSettings.Smtp.Port")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="DefaultFromDisplayName" name="DefaultFromDisplayName" required class="validate form-control" />
                                        <label for="DefaultFromDisplayName" class="form-label">@L("EmailSettings.DefaultFromDisplayName")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="UserName" name="UserName" required class="validate form-control" />
                                        <label for="UserName" class="form-label">@L("EmailSettings.UserName")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="Password" name="Password" required class="validate form-control" />
                                        <label for="Password" class="form-label">@L("EmailSettings.Password")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <div class="form-line">
                                        <input id="EnableSsl" name="EnableSsl" required class="validate form-control" />
                                        <label for="EnableSsl" class="form-label">@L("EmailSettings.EnableSsl")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="HtmlContent" id="HtmlContent" />

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="EmailTemplateEditModal" tabindex="-1" emailTemplate="dialog" aria-labelledby="EmailTemplateEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" emailTemplate="document">
        <div class="modal-content">

        </div>
    </div>
</div>

