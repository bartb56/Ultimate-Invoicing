@using UltimateInvocing.Web.Models.Common.Modals
@model UltimateInvocing.Web.Models.TaxGroup.EditTaxGroupViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditTaxGroup")))

<div class="modal-body">
    <form name="TaxGroupEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="displayname" type="text" name="Name" value="@Model.Name" required maxlength="128" minlength="2" class="validate form-control">
                        <label for="displayname" class="form-label">@L("TaxGroup.Name")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Percentage" type="number" name="Percentage" value="@Model.Percentage" required minlength="0" class="validate form-control">
                        <label for="Percentage" class="form-label">@L("TaxGroup.Percentage")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="displayorder" type="number" mmin="0" value="@Model.DisplayOrder" name="Displayorder" required class="validate form-control">
                        <label for="displayorder" class="form-label">@L("DisplayOrder")</label>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/TaxGroups/Edit.js" asp-append-version="true"></script>