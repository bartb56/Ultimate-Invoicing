@using UltimateInvocing.Web.Models.Common.Modals
@model UltimateInvocing.Factories.PaymentType.Models.PaymentTypeViewModel
@{
    Layout = null;
}

@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditPaymentType")))



<div class="modal-body">
    <form name="PaymentTypeEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Number" type="text" value="@Model.TypeName" name="TypeName" required maxlength="128" minlength="0" class="validate form-control">
                        <label for="Number" class="form-label">@L("PaymentType.TypeName")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Name" type="number" value="@Model.DisplayOrder" name="DisplayOrder" required maxlength="128" minlength="0" class="validate form-control">
                        <label for="Name" class="form-label">@L("PaymentType.DisplayOrder")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/PaymentTypes/_EditProductTypeModal.js" asp-append-version="true"></script>