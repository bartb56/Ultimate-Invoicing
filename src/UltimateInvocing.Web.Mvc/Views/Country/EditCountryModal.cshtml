@using UltimateInvocing.Web.Models.Common.Modals
@model UltimateInvocing.Web.Models.Country.EditCountryModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCountry")))

<div class="modal-body">
    <form name="CountryEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="Name" type="text" name="Name" value="@Model.Name" required maxlength="128" minlength="2" class="validate form-control">
                        <label for="Name" class="form-label">@L("Country.Name")</label>
                        @Html.LabelFor(x => x.Name);
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="IsoCode" name="IsoCode" class="validate form-control" maxlength="2" value="@Model.IsoCode" />
                        <label for="IsoCode" class="form-label">@L("Country.IsoCode")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="IsoCode3" name="IsoCode3" class="validate form-control" maxlength="3" value="@Model.IsoCode3" />
                        <label for="IsoCode3" class="form-label">@L("Country.IsoCode3")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="DisplayOrder" type="number" name="DisplayOrder" value="@Model.DisplayOrder" min="0" class="validate form-control">
                        <label for="DisplayOrder" class="form-label">@L("DisplayOrder")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Countries/_EditCountryModal.js" asp-append-version="true"></script>
