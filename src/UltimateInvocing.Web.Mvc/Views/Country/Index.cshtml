@using UltimateInvocing.Web.Startup
@model UltimateInvocing.Web.Models.Country.CountryListModel
@{
    ViewBag.CurrentPageName = PageNames.Countries; // The menu item will be active for this page.
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Countries/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Countries/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("Countries")
                    <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float" data-toggle="modal" data-target="#CountryCreateModal">
                        <i class="material-icons">add</i>
                    </button>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" country="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@L("Country.Name")</th>
                            <th>@L("Country.IsoCode")</th>
                            <th>@L("Country.IsoCode3")</th>
                            <th>@L("DisplayOrder")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var country in Model.Countries)
                        {
                        <tr>
                            <td>@L(country.Name)</td>
                            <td>@country.IsoCode</td>
                            <td>@country.IsoCode3</td>
                            <td>@country.DisplayOrder</td>
                            <td class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" country="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#" class="waves-effect waves-block edit-country" data-country-id="@country.Id" data-toggle="modal" data-target="#CountryEditModal"><i class="material-icons">edit</i>@L("Edit")</a></li>
                                    <li><a href="#" class="waves-effect waves-block delete-country" data-country-id="@country.Id" data-country-name="@country.Name"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="CountryCreateModal" tabindex="-1" country="dialog" aria-labelledby="CountryCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" country="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>@L("CreateNewCountry")</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="countryCreateForm" country="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="Name" type="text" name="Name" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="Name" class="form-label">@L("Country.Name")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="IsoCode" type="text" name="IsoCode" maxlength="2" minlength="0" class="validate form-control">
                                    <label for="IsoCode" class="form-label">@L("Country.IsoCode")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="IsoCode3" name="IsoCode3" maxlength="3" minlength="0" class="validate form-control">
                                    <label for="IsoCode3" class="form-label">@L("Country.IsoCode3")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="DisplayOrder" type="number" name="DisplayOrder" min="0" class="validate form-control">
                                    <label for="DisplayOrder" class="form-label">@L("DisplayOrder")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                   
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CountryEditModal" tabindex="-1" country="dialog" aria-labelledby="CountryEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" country="document">
        <div class="modal-content">

        </div>
    </div>
</div>
