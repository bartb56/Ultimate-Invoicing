@using UltimateInvocing.Web.Startup
@model UltimateInvocing.Web.Factories.Company.CompanyListModel
@{
    ViewBag.CurrentPageName = PageNames.Company; // The menu item will be active for this page.
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Companies/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Companies/Index.min.js" asp-append-version="true"></script>
    </environment>
}


<div id="logoExtended" class="logoExtended">
    <i id="extendedToggle" class="material-icons">close</i>
    <img id="extendedImg"/>
</div>


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("Companies")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" company="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="RefreshButton" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@L("Company.Name")</th>
                            <th>@L("Company.KVK")</th>
                            <th>@L("Company.IBAN")</th>
                            <th>@L("Company.BTW")</th>
                            <th>@L("Country")</th>
                            <th>@L("Province")</th>
                            <th>@L("Company.City")</th>
                            <th>@L("Company.StreetAddress")</th>
                            <th>@L("Company.HouseNumber")</th>
                            <th>@L("Company.PostalCode")</th>
                            <th>@L("Company.PhoneNumber")</th>
                            <th>@L("Company.Logo")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model.Companies)
                        {
                        <tr>
                            <td>@company.Name</td>
                            <td>@company.KVK</td>
                            <td>@company.IBAN</td>
                            <td>@company.BTW</td>
                            <td>@L(company.Country.Name)</td>
                            <td>@company.Province.Name</td>
                            <td>@company.City</td>
                            <td>@company.StreetAddress</td>
                            <td>@company.HouseNumber</td>
                            <td>@company.PostalCode</td>
                            <td>@company.PhoneNumber</td>
                            <td><img class="logo" src="@company.Logo"/></td>

                            <td class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" company="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#" class="waves-effect waves-block edit-company" data-company-id="@company.Id" data-toggle="modal" data-target="#CompanyEditModal"><i class="material-icons">edit</i>@L("Edit")</a></li>
                                    <li><a href="#" class="waves-effect waves-block delete-company" data-company-id="@company.Id" data-company-name="@company.Name"><i class="material-icons">delete_sweep</i>@L("Delete")</a></li>
                                </ul>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" data-toggle="modal" data-target="#CompanyCreateModal">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="CompanyCreateModal" tabindex="-1" company="dialog" aria-labelledby="CompanyCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" company="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span>@L("CreateNewCompany")</span>
                </h4>
            </div>
            <div class="modal-body">
                <form name="companyCreateForm" asp-action="create" asp-controller="Company" enctype="multipart/form-data" company="form" novalidate class="form-validation">
                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companyname" type="text" name="Name" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companyname" class="form-label">@L("Company.Name")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companykvk" type="text" name="KVK" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companykvk" class="form-label">@L("Company.KVK")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companyiban" type="text" name="IBAN" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companyiban" class="form-label">@L("Company.IBAN")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companybtw" type="text" name="BTW" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companybtw" class="form-label">@L("Company.BTW")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select id="CountryId" name="CountryId" required asp-items="Model.Countries" class="validate form-control"></select>
                                    <label for="CountryId" class="form-label">@L("Country")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <select id="ProvinceId" name="ProvinceId" required asp-items="Model.Provinces" class="validate form-control"></select>
                                    <label for="ProvinceId" class="form-label">@L("Province")</label>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companycity" type="text" name="City" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companycity" class="form-label">@L("Company.City")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companystreetaddress" type="text" name="StreetAddress" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companystreetaddress" class="form-label">@L("Company.StreetAddress")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companyhousenumber" type="text" name="Housenumber" required maxlength="128" minlength="1" class="validate form-control">
                                    <label for="companyhousenumber" class="form-label">@L("Company.HouseNumber")</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companypostalcode" type="text" name="Postalcode" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companypostalcode" class="form-label">@L("Company.PostalCode")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <input id="companyphonenumber" type="text" name="Phonenumber" required maxlength="128" minlength="2" class="validate form-control">
                                    <label for="companyphonenumber" class="form-label">@L("Company.PhoneNumber")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row clearfix">
                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <label for="companylogo" class="form-label">@L("Company.Logo") <i class="material-icons">file_upload</i></label>
                                    <input id="companylogo" style="display: none" type="file" name="File" multiple="" required class="validate form-control">
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
                        <button type="submit" class="btn btn-primary waves-effect">@L("Save")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CompanyEditModal" tabindex="-1" company="dialog" aria-labelledby="CompanyEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" company="document">
        <div class="modal-content">

        </div>
    </div>
</div>
