@using UltimateInvocing.Web.Models.Common.Modals
@model UltimateInvocing.Web.Models.Province.EditProvinceViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProvince")))

<div class="modal-body">
    <form name="ProvinceEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="row clearfix">
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="displayname" type="text" name="Name" value="@Model.Name" required maxlength="128" minlength="2" class="validate form-control">
                        <label for="displayname" class="form-label">@L("Province.Name")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <select id="CountryId" name="CountryId" required asp-items="Model.Countries" class="validate form-control"></select>
                        <label for="CountryId" class="form-label">@L("Country")</label>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="displayorder" type="number" mmin="0" value="@Model.DisplayOrder" name="Displayorder" required class="validate form-control">
                        <label for="displayorder" class="form-label">@L("DisplayOrder")</label>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Provinces/_EditProvinceModal.js" asp-append-version="true"></script>
